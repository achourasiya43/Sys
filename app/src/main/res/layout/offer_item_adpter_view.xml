<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ecf0f1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.tech.ac.sys.cv.TextviewRegular
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:maxLines="1"
                    android:text="Hello this  new"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp"/>

                <ImageView
                    android:id="@+id/iv_deletePost"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/delete_idon"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:src="@drawable/profile_bg"
                    android:scaleType="centerCrop"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_like_heart"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/heart_icons"
                    android:tint="@color/colorPrimaryDark"/>

                <com.tech.ac.sys.cv.TextviewRegular
                    android:id="@+id/tv_time_stamp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="right"
                    android:text="12:00pm"
                    android:textSize="@dimen/_8sdp"
                    />

                <ImageView
                    android:id="@+id/iv_comments"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/comments_icon"
                    android:tint="@color/colorPrimary"/>

            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
